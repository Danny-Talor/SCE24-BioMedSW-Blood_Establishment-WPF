<Window x:Class="SCE24_BioMedSW_Blood_Establishment_WPF.ChangeRoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change User Role" Height="180" Width="260">
    <StackPanel Margin="10">
        <TextBlock Text="Current Role" Margin="0,0,0,5"/>
        <TextBlock Name="CurrentRoleTextBlock" FontWeight="Bold"/>

        <TextBlock Text="New Role" Margin="10,5,0,5"/>
        <ComboBox Name="RoleComboBox" ItemsSource="{StaticResource UserRoles}" />

        <Button Content="Apply" HorizontalAlignment="Right" Margin="10" Click="Apply_Click"/>
    </StackPanel>
</Window>
