<Window x:Class="SCE24_BioMedSW_Blood_Establishment_WPF.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCE24_BioMedSW_Blood_Establishment_WPF"
        mc:Ignorable="d"
        Title="Add new user" Height="180" Width="260">
    <StackPanel Margin="10">
        <TextBlock Text="Username" Margin="0,0,0,5"/>
        <TextBox Name="UsernameTextBox"/>

        <TextBlock Text="Role" Margin="10,5,0,5"/>
        <ComboBox Name="RoleComboBox" ItemsSource="{StaticResource UserRoles}"/>

        <Button Content="Add User" HorizontalAlignment="Right" Margin="10" Click="AddUser_Click"/>
    </StackPanel>
</Window>
